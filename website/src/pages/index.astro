  <style>
    main {
      width: 100%;
    }

    section {
      padding: 5rem 0;
      position: relative;
      overflow: hidden;
    }

    section::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 2px;
      background: linear-gradient(90deg, transparent, var(--primary), transparent);
      animation: slideRight 3s ease-in-out infinite;
    }

    @keyframes slideRight {
      0%, 100% {
        left: -100%;
      }
      50% {
        left: 100%;
      }
    }

    /* Hero Section */
    .hero {
      min-height: 90vh;
      display: flex;
      align-items: center;
      background: var(--bg);
      position: relative;
    }

    .hero::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      height: 1px;
      background: var(--border);
    }

    .hero-content {
      max-width: 900px;
    }

    .hero h1 {
      font-size: clamp(2.5rem, 6vw, 4.5rem);
      margin-bottom: 1.5rem;
      font-weight: 800;
      letter-spacing: -0.02em;
      line-height: 1.1;
    }

    .highlight {
      color: var(--primary);
      position: relative;
      display: inline-block;
    }

    .highlight::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 3px;
      background: var(--primary);
      animation: pulse 2s ease-in-out infinite;
    }

    .subtitle {
      font-size: clamp(1.1rem, 2.5vw, 1.4rem);
      color: var(--text-light);
      margin-bottom: 1rem;
      line-height: 1.6;
    }

    .location {
      font-size: 1.1rem;
      color: var(--text-light);
      margin-bottom: 2.5rem;
    }

    .fade-in {
      animation: fadeInUp 0.8s ease-out;
    }

    .slide-in {
      animation: slideIn 0.8s ease-out 0.2s backwards;
    }

    .fade-in-delay {
      animation: fadeInUp 0.8s ease-out 0.4s backwards;
    }

    .cta-buttons {
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
    }

    .btn {
      padding: 1rem 2rem;
      border-radius: 0;
      text-decoration: none;
      font-weight: 700;
      transition: all 0.3s ease;
      display: inline-block;
      text-transform: uppercase;
      letter-spacing: 1px;
      font-size: 0.9rem;
      position: relative;
      overflow: hidden;
    }

    .btn::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: rgba(255, 255, 255, 0.1);
      transition: left 0.3s ease;
    }

    .btn:hover::before {
      left: 100%;
    }

    .btn-primary {
      background: var(--primary);
      color: var(--secondary);
      border: 2px solid var(--primary);
    }

    .btn-primary:hover {
      background: var(--primary-dark);
      transform: translateY(-3px);
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
    }

    .btn-secondary {
      background: transparent;
      color: var(--primary);
      border: 2px solid var(--primary);
    }

    .btn-secondary:hover {
      background: var(--primary);
      color: var(--secondary);
      transform: translateY(-3px);
    }

    /* Section Titles */
    .section-title {
      font-size: clamp(2rem, 5vw, 3rem);
      margin-bottom: 3rem;
      font-weight: 800;
      text-transform: uppercase;
      letter-spacing: -0.02em;
      position: relative;
      display: inline-block;
    }

    .section-title::after {
      content: '';
      position: absolute;
      bottom: -10px;
      left: 0;
      width: 60px;
      height: 4px;
      background: var(--primary);
    }

    /* About Section */
    .about {
      background: var(--bg-secondary);
    }

    .summary-text {
      font-size: 1.2rem;
      line-height: 1.8;
      color: var(--text);
      max-width: 900px;
      text-align: justify;
    }

    /* Experience Section */
    .experience {
      background: var(--bg);
    }

    .experience-item {
      margin-bottom: 3rem;
      padding: 2.5rem;
      background: var(--bg-secondary);
      border-left: 4px solid var(--primary);
      transition: all 0.3s ease;
      position: relative;
    }

    .experience-item::before {
      content: '';
      position: absolute;
      left: 0;
      top: 0;
      width: 0;
      height: 100%;
      background: rgba(0, 0, 0, 0.02);
      transition: width 0.3s ease;
    }

    .experience-item:hover::before {
      width: 100%;
    }

    .experience-item:hover {
      transform: translateX(10px);
      box-shadow: -5px 5px 20px rgba(0, 0, 0, 0.1);
    }

    .experience-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 1.5rem;
      flex-wrap: wrap;
      gap: 1rem;
    }

    .experience-item h3 {
      font-size: 1.8rem;
      font-weight: 800;
      margin-bottom: 0.5rem;
      color: var(--primary);
    }

    .duration {
      font-size: 1rem;
      color: var(--text-light);
      font-weight: 600;
    }

    .role {
      margin-top: 2rem;
      padding-top: 2rem;
      border-top: 1px solid var(--border);
    }

    .role:first-child {
      margin-top: 0;
      padding-top: 0;
      border-top: none;
    }

    .role h4 {
      font-size: 1.4rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
    }

    .role-date {
      color: var(--text-light);
      font-size: 0.95rem;
      margin-bottom: 1rem;
      font-weight: 600;
    }

    .location-text {
      color: var(--text-light);
      font-size: 0.95rem;
      margin-bottom: 1rem;
    }

    .achievements {
      list-style: none;
      margin-left: 0;
    }

    .achievements li {
      padding-left: 1.8rem;
      position: relative;
      margin-bottom: 0.8rem;
      line-height: 1.6;
      transition: all 0.2s ease;
    }

    .achievements li:hover {
      color: var(--primary);
      transform: translateX(5px);
    }

    .achievements li::before {
      content: "▸";
      position: absolute;
      left: 0;
      color: var(--primary);
      font-weight: bold;
      font-size: 1.2rem;
    }

    /* Education Section */
    .education {
      background: var(--bg-secondary);
    }

    .education-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
    }

    .education-card {
      background: var(--bg);
      padding: 2rem;
      border: 2px solid var(--border);
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    .education-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(0, 0, 0, 0.03), transparent);
      transition: left 0.5s ease;
    }

    .education-card:hover::before {
      left: 100%;
    }

    .education-card:hover {
      border-color: var(--primary);
      transform: translateY(-10px);
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
    }

    .education-card h3 {
      font-size: 1.3rem;
      font-weight: 700;
      margin-bottom: 1rem;
      color: var(--primary);
    }

    .degree {
      font-size: 1.1rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
    }

    .degree-detail {
      color: var(--text-light);
      margin-bottom: 0.5rem;
    }

    .edu-date {
      color: var(--text-light);
      font-size: 0.9rem;
    }

    /* Certifications Section */
    .certifications {
      background: var(--bg);
    }

    .cert-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 2rem;
    }

    .cert-card {
      background: var(--bg-secondary);
      padding: 2rem;
      border: 2px solid var(--primary);
      transition: all 0.3s ease;
      cursor: pointer;
      position: relative;
    }

    .cert-card::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 0;
      height: 4px;
      background: var(--primary);
      transition: width 0.3s ease;
    }

    .cert-card:hover::after {
      width: 100%;
    }

    .cert-card:hover {
      transform: scale(1.05);
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
      background: var(--bg);
    }

    .cert-content h3 {
      font-size: 1.1rem;
      font-weight: 700;
      line-height: 1.4;
      text-align: center;
    }

    /* Languages Section */
    .languages {
      background: var(--bg-secondary);
    }

    .languages-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 2rem;
      max-width: 600px;
    }

    .language-card {
      background: var(--bg);
      padding: 2rem;
      text-align: center;
      border: 2px solid var(--border);
      transition: all 0.3s ease;
    }

    .language-card:hover {
      border-color: var(--primary);
      transform: translateY(-5px);
    }

